<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_1"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_width="151dp"
            android:layout_height="155dp"
            android:layout_marginHorizontal="140dp"
            android:layout_marginVertical="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_launcher_background"
            app:civ_border_color="#FF000000"
            app:civ_border_width="0dp"
            tools:ignore="MissingClass" />

        <EditText
            android:id="@+id/name"
            android:layout_width="375dp"
            android:layout_height="47dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:background="#610E0000"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textColorHint="#FFFBFB"
            app:layout_constraintBottom_toTopOf="@+id/uname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile" />

        <EditText
            android:id="@+id/uname"
            android:layout_width="375dp"
            android:layout_height="47dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:background="#610E0000"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            android:textColorHint="#FFFBFB"
            app:layout_constraintBottom_toTopOf="@+id/pno"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name" />

        <EditText
            android:id="@+id/pno"
            android:layout_width="375dp"
            android:layout_height="47dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="20dp"
            android:background="#610E0000"
            android:ems="10"
            android:hint="Mobile Number"
            android:inputType="textEmailAddress"
            android:textColorHint="#FFFBFB"
            app:layout_constraintBottom_toTopOf="@+id/pwd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/uname" />

        <EditText
            android:id="@+id/pwd"
            android:layout_width="375dp"
            android:layout_height="47dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="#610E0000"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="#FFFBFB"
            app:layout_constraintBottom_toTopOf="@+id/confirmpwd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pno" />

        <EditText
            android:id="@+id/confirmpwd"
            android:layout_width="375dp"
            android:layout_height="47dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="20dp"
            android:background="#610E0000"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColorHint="#FFFBFB"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pwd" />

        <EditText
            android:id="@+id/code"
            android:layout_width="371dp"
            android:layout_height="44dp"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="20dp"
            android:background="#610E0000"
            android:ems="10"
            android:hint="Enter Verification code"
            android:inputType="textPassword"
            android:textColorHint="#FFFBFB" />

        <Button
            android:id="@+id/button2"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="100dp"
            android:background="#FF5722"
            android:onClick="verifyotp"
            android:text="Verify mobile number" />

        <Button
            android:id="@+id/button"
            android:layout_width="123dp"
            android:layout_height="58dp"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="141dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="143dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="195dp"
            android:background="#FF5722"
            android:onClick="signup"
            android:text="SIGN UP"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confirmpwd" />

    </LinearLayout>

</RelativeLayout>