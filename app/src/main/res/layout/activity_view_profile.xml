<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ViewProfile">

    <RelativeLayout
        android:id="@+id/rellay1"
        android:layout_width="394dp"
        android:layout_height="379dp"
        android:background="@drawable/grad"
        android:paddingBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-2dp">>

        <RelativeLayout
            android:id="@+id/imgUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/circle_border"
            android:scaleType="centerInside">

            <ImageView
                android:id="@+id/fr_img"
                android:layout_width="191dp"
                android:layout_height="205dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="9dp"
                android:adjustViewBounds="true"
                android:background="@drawable/circle"
                android:padding="30dp"
                android:paddingLeft="30dp"
                android:scaleType="centerInside"
                android:src=""
                android:textAlignment="center" />

        </RelativeLayout>

        <TextView
            android:id="@+id/fr_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="117dp"
            android:layout_marginTop="272dp"
            android:fontFamily="sans-serif-light"
            android:hint="profile name"
            android:textColor="@color/white"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/fr_uname"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="89dp"
            android:layout_marginTop="319dp"
            android:fontFamily="sans-serif-light"
            android:hint="user name"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/fr_status"
        android:layout_width="352dp"
        android:layout_height="106dp"
        android:fontFamily="sans-serif-light"
        android:hint="status"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textColorHighlight="@color/primary_col"
        android:textColorHint="@color/primary_col"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="394dp" />

    <TextView
        android:id="@+id/fr_phone"
        android:layout_width="353dp"
        android:layout_height="47dp"
        android:fontFamily="sans-serif-light"
        android:hint="phone number"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textColorHighlight="@color/primary_col"
        android:textColorHint="@color/primary_col"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="511dp" />


</androidx.constraintlayout.widget.ConstraintLayout>






