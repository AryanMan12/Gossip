<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/checkbox"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:foregroundTint="#E6D8D8"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".ViewProfile">

    <ImageView
        android:id="@+id/fr_img"
        android:layout_width="wrap_content"
        android:layout_height="238dp"
        android:layout_margin="10dp"
        android:layout_weight="0.5"
        android:background="@color/black"
        android:cropToPadding="false"
        android:padding="10dp"
        android:rotationY="0"
        android:textAlignment="center"
        app:srcCompat="@drawable/gossip3" />

    <TextView
        android:id="@+id/fr_name"
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:layout_weight="0.5"
        android:editable="false"

        android:hint="name "
        android:paddingVertical="0dp"
        android:paddingTop="10dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/primary_col"
        android:textColorHint="@color/primary_col"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fr_status"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:hint="status"
        android:inputType="textPersonName"
        android:paddingTop="10dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#FFFBFB"
        android:textColorHint="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/fr_uname"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginVertical="15dp"
        android:background="#172E97EC"
        android:backgroundTint="#FFC107"
        android:hint="Username"
        android:paddingTop="5dp"
        android:textAlignment="center"
        android:textColor="@color/primary_col"
        android:textColorHint="@color/primary_col"
        android:textSize="25sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/fr_phone"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="#FFFFFF"
        android:hint="phone number"
        android:textAlignment="center"
        android:textColor="#FFFBFB"
        android:textColorHint="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="Button" />

</LinearLayout>