<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/checkbox"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_col"
    android:foregroundTint="#E6D8D8"
    android:orientation="vertical"
    tools:context=".ViewProfile">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="51dp"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="@color/primary_col"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="309dp"
        android:layout_weight="0.5"
        android:rotationY="0"
        app:srcCompat="@drawable/background" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_weight="0.5"
        android:background="@color/primary_col"
        android:editable="false"
        android:padding="20dp"
        android:paddingVertical="0dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="KRISH DESAI"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="376dp"
        android:layout_height="44dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        android:backgroundTint="#FFFFFF"
        android:hint="Username"
        android:textAlignment="center"
        android:textColor="@color/primary_col"
        android:textColorHint="@color/primary_col"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="395dp"
        android:layout_height="71dp"
        android:layout_margin="10dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="20dp"
        android:layout_marginTop="0dp"
        android:backgroundTint="#FAFAFA"
        android:ems="10"
        android:hint="status"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#FFFBFB"
        android:textColorHint="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="#FFFFFF"
        android:hint="phone number"
        android:textColor="#FFFBFB"
        android:textColorHint="@color/white"
        android:textSize="20sp" />

    <Switch
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_margin="5dp"
        android:layout_marginVertical="10dp"
        android:layout_weight="0.5"
        android:background="@color/bg_col"
        android:onClick="onSelect"
        android:shadowColor="#975F5F"
        android:switchTextAppearance="@style/TextAppearance.AppCompat.Display4"
        android:text="@string/checkbox"
        android:textAlignment="textStart"
        android:textColor="@color/primary_col"
        android:textColorHint="@color/white"
        android:textSize="16sp" />

</LinearLayout>