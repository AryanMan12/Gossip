<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/checkbox"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:foregroundTint="#E6D8D8"
    android:gravity="center"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".ViewProfile">

    <ImageButton
        android:id="@+id/imageButton2"

        android:layout_width="63dp"
        android:layout_height="24dp"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:background="@color/bg_col"
        android:onClick="onBack"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fr_img"
        android:layout_width="match_parent"
        android:layout_height="254dp"
        android:layout_margin="10dp"
        android:layout_weight="3"
        android:background="@color/black"
        android:cropToPadding="false"
        android:padding="10dp"
        android:rotationY="0"
        android:textAlignment="center"
        app:srcCompat="@drawable/gossip3" />

    <TextView
        android:id="@+id/fr_name"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_weight="1"
        android:editable="false"

        android:hint="name "
        android:paddingVertical="4dp"
        android:paddingTop="10dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/primary_col"
        android:textColorHint="@color/primary_col"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fr_uname"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginVertical="15dp"
        android:layout_weight="1"
        android:hint="Username"
        android:paddingTop="5dp"
        android:textAlignment="center"
        android:textColor="@color/primary_col"
        android:textColorHint="@color/primary_col"
        android:textSize="25sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/fr_status"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="status"
        android:inputType="textPersonName"
        android:paddingTop="10dp"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#FFFBFB"
        android:textColorHint="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/fr_phone"
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:layout_margin="10dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:layout_weight="1"
        android:backgroundTint="#FFFFFF"
        android:hint="phone number"
        android:textAlignment="textStart"
        android:textColor="#FFFBFB"
        android:textColorHint="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_weight="1"
        android:background="@drawable/round"
        android:onClick="onSelect"
        android:text="Button"
        android:textSize="24sp" />

</LinearLayout>