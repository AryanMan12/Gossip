<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1"
    tools:context=".profile_page">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile"
        android:layout_width="151dp"
        android:layout_height="155dp"
        android:layout_marginHorizontal="140dp"
        android:layout_marginVertical="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/img_2"
        app:civ_border_color="#FF000000"
        app:civ_border_width="0dp"
        tools:ignore="MissingClass" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="135dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="316dp"
        android:background="#FF5722"
        android:text="@string/btnSave"
        android:textColor="#060608" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="271dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="301dp"
        android:background="#610E0000"
        android:text="Aryan Gupta"
        android:textColor="#FFFBFB"
        android:textColorHint="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="273dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="366dp"
        android:background="#610E0000"
        android:hint="@string/changeEmail"
        android:text="aryangupta@gmail.com"
        android:textColor="#FFFBFB"
        android:textColorHint="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="276dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="33dp"
        android:layout_marginBottom="407dp"
        android:background="#610E0000"
        android:hint="@string/changeBio"
        android:text="hoemore"
        android:textColor="#FFFBFB"
        android:textColorHint="@color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnPass"
        android:layout_width="159dp"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="240dp"
        android:background="#FF5722"
        android:text="@string/btnPass"
        android:textColor="#060608" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="37dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="16dp"
        android:background="#81000000"
        android:src="@drawable/ic_baseline_arrow_back_ios_24" />

</RelativeLayout>