<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1"
    android:orientation="vertical"
    tools:context=".profile_page">


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="43dp"
        android:layout_height="39dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:background="#81000000"
        android:src="@drawable/ic_baseline_arrow_back_ios_24" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile"
        android:layout_width="221dp"
        android:layout_height="217dp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginVertical="10dp"
        android:src="@drawable/img_3"
        app:civ_border_color="#FF000000"
        app:civ_border_width="0dp" />

    <EditText
        android:id="@+id/textView3"
        android:layout_width="385dp"
        android:layout_height="44dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:background="#610E0000"
        android:hint="@string/uname"
        android:text="deeepaliiiii"
        android:textColor="#FFFBFB"
        android:textColorHint="@color/white"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/textView5"
        android:layout_width="388dp"
        android:layout_height="43dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:background="#610E0000"
        android:hint="@string/changeName"
        android:text="Deepali Gupta"
        android:textColor="#FFFBFB"
        android:textColorHint="@color/white"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="393dp"
        android:layout_height="43dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:background="#610E0000"
        android:ems="10"
        android:hint="@string/changeBio"
        android:inputType="textPersonName"
        android:text="Be happy!"
        android:textColor="#FFFBFB"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/textView6"
        android:layout_width="391dp"
        android:layout_height="44dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:background="#610E0000"
        android:hint="@string/changeNumber"
        android:text="9989893481"
        android:textColor="#FFFBFB"
        android:textColorHint="@color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="120dp"
        android:layout_marginVertical="30dp"
        android:background="#FF5722"
        android:text="@string/btnSave"
        android:textColor="#060608" />

    <Button
        android:id="@+id/btnPass"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="120dp"
        android:background="#FF5722"
        android:text="@string/btnPass"
        android:textColor="#060608" />


</LinearLayout>